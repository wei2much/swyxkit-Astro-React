---
import { getEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PrismHighlight from '../components/PrismHighlight';

const aboutPage = await getEntry('pages', 'about');
const { Content } = await aboutPage.render();
---

<Layout title={aboutPage.data.title} description={aboutPage.data.description}>
  <article class="container prose mx-auto mb-12 hover:prose-a:text-blue-300 prose-ul:list-disc dark:prose-invert max-w-2xl px-4 sm:px-8">
    <Content />
  </article>
  
  <!-- PrismJS Syntax Highlighting -->
  <PrismHighlight client:load />
</Layout>